<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <com.byteera.bank.widget.roundimage.RoundedImageView
            android:id="@+id/iv_head"
            android:layout_width="@dimen/margin4"
            android:layout_height="@dimen/margin4"
            android:src="@drawable/default_avatar"
            app:riv_corner_radius="@dimen/margin2" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="@dimen/margin5"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_head"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_small"
        android:maxHeight="@dimen/margin4"
        android:gravity="center"
        android:singleLine="true"
        android:textSize="@dimen/font_small1_size" />
</RelativeLayout>