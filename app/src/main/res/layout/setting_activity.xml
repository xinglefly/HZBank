<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:hz="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f8f8"
    android:orientation="vertical">

    <com.byteera.bank.widget.HeadViewMain
        android:id="@+id/head_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        hz:leftImg="@drawable/back"
        hz:titleName="设置"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textview1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_small0.4"
            android:layout_marginLeft="@dimen/margin1"
            android:layout_marginRight="@dimen/margin1"
            android:background="#E6E6E6"/>

        <RelativeLayout
            android:id="@+id/change_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin5"
            android:background="@drawable/btn_bottom_selector"
            android:padding="@dimen/margin1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/margin1"
                android:text="修改密码"
                android:textColor="@color/sanqi"
                android:textSize="@dimen/font_small5_size"
                android:typeface="serif"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray"/>

        <RelativeLayout
            android:id="@+id/rl_clear_liaotian"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin5"
            android:background="@drawable/btn_bottom_selector"
            android:padding="@dimen/margin1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/margin1"
                android:text="清空聊天记录"
                android:textColor="@color/sanqi"
                android:textSize="@dimen/font_small5_size"
                android:typeface="serif"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray"/>

        <RelativeLayout
            android:id="@+id/rl_clear_cache"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin5"
            android:background="@drawable/btn_bottom_selector"
            android:padding="@dimen/margin1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/margin1"
                android:text="清空缓存"
                android:textColor="@color/sanqi"
                android:textSize="@dimen/font_small5_size"
                android:typeface="serif"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin5"
            android:background="@drawable/btn_bottom_selector"
            android:padding="@dimen/margin1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/margin1"
                android:text="构建日期：2015-12-08"
                android:textColor="@color/sanqi"
                android:textSize="@dimen/font_small5_size"
                android:typeface="serif"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#f8f8f8"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray"/>

        <RelativeLayout
            android:id="@+id/rl_switch_notify"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin5"
            android:background="@color/white"
            android:padding="@dimen/margin1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/margin1"
                android:text="开启消息免打扰"
                android:textColor="@color/sanqi"
                android:textSize="@dimen/font_small5_size"
                android:typeface="serif"/>


            <com.byteera.bank.widget.SwitchView
                android:id="@+id/iv_switch_notification"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#f8f8f8"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray"/>

        <RelativeLayout
            android:id="@+id/btn_logout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin5"
            android:background="@drawable/btn_bottom_selector"
            android:padding="@dimen/margin1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="退出登录"
                android:textColor="@color/sanqi"
                android:textSize="@dimen/font_small5_size"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray"/>
    </LinearLayout>

</LinearLayout>