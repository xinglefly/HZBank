<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/ui_10_dip"
        android:background="@drawable/conversation_pop"
        android:orientation="vertical"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/tv_chat_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/conversation_chat"
            android:drawablePadding="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="@dimen/ui_10_dip"
            android:paddingTop="10dp"
            android:text="发起群聊"
            android:textColor="@color/white"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/white"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_add_friends"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/conversation_tianjiahaoyou"
            android:drawablePadding="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="30dp"
            android:paddingRight="@dimen/ui_10_dip"
            android:paddingTop="10dp"
            android:singleLine="true"
            android:text="添加好友"
            android:textColor="@color/white"
            android:visibility="gone"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/white"/>

        <TextView
            android:id="@+id/tv_saoyisao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/conversation_saoyisao"
            android:drawablePadding="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="@dimen/ui_10_dip"
            android:paddingTop="10dp"
            android:singleLine="true"
            android:text="扫一扫"
            android:textColor="@color/white"/>
    </LinearLayout>
</FrameLayout>
