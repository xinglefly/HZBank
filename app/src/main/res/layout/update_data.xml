<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:zhicai="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#f8f8f8"
              android:orientation="vertical">


    <com.byteera.bank.widget.HeadViewMain
        android:id="@+id/head_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        zhicai:leftImg="@drawable/back"
        zhicai:rightText="确定"
        zhicai:titleName="修改密码"/>

    <EditText
        android:id="@+id/et_oldpwd"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/margin5"
        android:layout_marginLeft="@dimen/margin1.5"
        android:layout_marginRight="@dimen/margin1.5"
        android:layout_marginTop="@dimen/margin1"
        android:background="@drawable/edit_coner"
        android:hint="输入旧密码"
        android:inputType="textPassword"
        android:paddingLeft="@dimen/margin1"
        android:singleLine="true"
        android:textColor="#373737"
        android:textColorHint="#b5b5b5"
        android:textCursorDrawable="@drawable/color_cursor"
        android:textSize="@dimen/font_small5_size"/>

    <EditText
        android:id="@+id/et_newpwd"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/margin5"
        android:layout_marginLeft="@dimen/margin1.5"
        android:layout_marginRight="@dimen/margin1.5"
        android:layout_marginTop="@dimen/margin1"
        android:background="@drawable/edit_coner"
        android:hint="输入新密码"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:singleLine="true"
        android:textColor="#373737"
        android:textColorHint="#b5b5b5"
        android:textCursorDrawable="@drawable/color_cursor"
        android:textSize="@dimen/font_small5_size"/>

    <EditText
        android:id="@+id/et_confirmpwd"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/margin5"
        android:layout_marginLeft="@dimen/margin1.5"
        android:layout_marginRight="@dimen/margin1.5"
        android:layout_marginTop="@dimen/margin1"
        android:background="@drawable/edit_coner"
        android:hint="重复输入新密码"
        android:inputType="textPassword"
        android:paddingLeft="@dimen/margin1"
        android:singleLine="true"
        android:textColor="#373737"
        android:textColorHint="#b5b5b5"
        android:textCursorDrawable="@drawable/color_cursor"
        android:textSize="@dimen/font_small5_size"/>
</LinearLayout>